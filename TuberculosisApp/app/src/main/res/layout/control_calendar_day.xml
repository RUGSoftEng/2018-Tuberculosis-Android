<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="35dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textDayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <ImageView
            android:id="@+id/pillIcon"
            android:layout_width="10dp"
            android:layout_height="11dp"
            android:layout_below="@+id/textDayNumber"
            android:layout_marginTop="-11dp"
            android:layout_toEndOf="@id/textDayNumber"
            android:layout_toRightOf="@id/textDayNumber"
            app:srcCompat="@drawable/ic_medication" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/takenOverlay"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:alpha=".60" />

</FrameLayout>